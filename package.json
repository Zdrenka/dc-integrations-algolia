{
  "name": "dc-integrations-algolia",
  "version": "1.0.0-develop",
  "description": "DC Integration - Algolia",
  "scripts": {
    "commit": "npx git-cz",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amplience/dc-integrations-algolia.git"
  },
  "keywords": [
    "dc",
    "integrations",
    "algolia",
    "example",
    "webhooks"
  ],
  "author": "Amplience",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/amplience/dc-integrations-algolia/issues"
  },
  "homepage": "https://github.com/amplience/dc-integrations-algolia#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "dc-management-sdk-js": "^1.3.0",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "reflect-metadata": "^0.1.13",
    "algoliasearch": "^3.32.1",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@types/algoliasearch": "^3.30.8",
    "@types/debug": "^4.1.4",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.12",
    "@types/joi": "^14.3.3",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^24.7.1",
    "node-mocks-http": "^1.7.5",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^5.5.2",
    "typescript": "^3.4.5"
  }
}
